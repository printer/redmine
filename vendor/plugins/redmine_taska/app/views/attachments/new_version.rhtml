<h2><%= l(:label_new_version_of, :value => @attachment.filename) %></h2>

<%= error_messages_for 'attachment' %>
<div class="box">
<% form_tag({ :action => 'new_version', :id => @attachment }, :multipart => true, :class => "tabular") do %>

<p><label><%=l(:label_attachment_plural)%></label><%= render :partial => 'attachments/form', :locals => {:several => false} %></p>
</div>
<%= submit_tag l(:button_add) %>
<% end %> 
